@page "/Account/Login"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Login - Lentz Crafts & Services</PageTitle>

<div class="login-page">
    <div class="login-container">
        <h1>Admin Login</h1>
        
        <form method="post" action="/Account/LoginPost" class="login-form">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-error">@errorMessage</div>
            }
            
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" name="email" type="email" class="form-control" required value="@loginModel.Email" />
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" class="form-control" required autocomplete="current-password" />
            </div>
            
            <input type="hidden" name="rememberMe" value="false" />
            <input type="hidden" name="returnUrl" value="/admin" />
            
            <button type="submit" class="btn-primary">Login</button>
        </form>
        
        <div class="login-info">
            <p><small>Default admin credentials:</small></p>
            <p><small>Email: admin@lentzcrafts.com</small></p>
            <p><small>Password: Admin@123</small></p>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = "";

    protected override void OnInitialized()
    {
        // Check for error parameter from redirect
        var uri = new Uri(Navigation.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        if (query.TryGetValue("error", out var error))
        {
            errorMessage = Uri.UnescapeDataString(error.ToString());
        }
    }

    public class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
